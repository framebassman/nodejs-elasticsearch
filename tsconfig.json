{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      // workaround for: https://github.com/vitest-dev/vitest/issues/4567
      "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
    }
  },
  "exclude": ["node_modules", "**/*.test.js", "dist"]
}
